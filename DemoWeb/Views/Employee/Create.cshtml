@model DemoApp.Model.Employee
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Designation" class="control-label"></label>
                <input asp-for="Designation" class="form-control" />
                <span asp-validation-for="Designation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Departments</label>
                <select asp-for="FkDeptId" class="form-control depts" asp-items="@ViewBag.Departments">
                </select>
            </div>
            <div class="form-group">
                <label>Employees</label>
                <select id="emp_names" class="form-control">
                    <option>Please choose from above</option>
                </select>
                
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>


    $("select.depts").change(function () {
        var selecteddept = $(this).children("option:selected").val();
        //alert("You have selected the country - " + selecteddept);
         var _empNames = JSON.parse('@Html.Raw(Json.Serialize(ViewData["EmpNames"]))');
        //console.log(_myNames);
        var vals = [];
        vals = _empNames;
        //console.log(vals);
        var $names = $("#emp_names");
            $names.empty();
        $.each(vals, function (index, value) {
            debugger;
            var v1 = vals[index].value;
            if (selecteddept == v1) {
                $names.append("<option>" + vals[index].text + "</option>")
            }
        });
    });
    
</script>
}
