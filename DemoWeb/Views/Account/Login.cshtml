@model DemoApp.Model.Login

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-6 col-lg-6" style="background:#fff">
            <div class="col-lg-12">
                <form class="form" action="" method="post">
                    <h3 class="text-center">Login</h3>
                    <div class="form-group">
                        <label for="username"></label><br>
                        <input asp-for="Email" name="Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label><br>
                        <input asp-for="Password" name="password" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="remember-me"><span>Remember me</span> <span><input asp-for="RememberMe" name="remember-me" type="checkbox"></span></label>
                        <input type="submit" name="submit" class="btn btn-primary btn-md float-right" value="Login">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


